	<div class="form">
		<h2 class="title is-2">Sign Up</h2>
		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<%= f.error_notification %>
			<div class="form-group">
				<%= f.input :name, required: true, autofocus: true, input_html: { class:"form-control" }, wrapper: false, label_html:{class:"form-label"}%>
			</div>
			<div class="form-group">
				<%= f.input :username, required: true, input_html: { class:"form-control" }, wrapper: false, label_html:{class:"form-label"} %>
			</div>
			<div class="form-group">
				<%= f.input :email, required: true, input_html: { class:"form-control" }, wrapper: false, label_html:{class:"form-label"} %>
			</div>
			<div class="form-group">
					<%= f.input :password, required: true, input_html: { class:"form-control" }, wrapper: false, label_html:{class:"form-label"}, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
			</div>
			<div class="form-group">
					<%= f.input :password_confirmation, required: true, input_html: { class: "form-control" }, wrapper: false, label_html:{class:"form-label"} %>		
			</div>
			<div class="form-group ">
				<%= f.button :submit, "Sign up", class:"btn btn-info" %>
			</div>
		<%end%>
		<br />
		<%= render "devise/shared/links" %>
	</div>