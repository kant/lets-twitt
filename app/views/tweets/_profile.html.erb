<div class="card">
  <%= image_tag current_user.photo.url, class: "card-img-top"%>
  <div class="card-body profile">
  <div class="personal-info">
    <h2 class="card-title"><%= current_user.name %></h2>
    <p class="card-text"><%= current_user.username %></p>
  </div>
  <hr>
  <p class="card-link">
  <strong> Tweets: <span><%= current_user.tweets.count %></span></strong>
  </p>
  <p class="card-link">
  <strong>Following: <span>123</span></strong>
  </p>
  <p class="card-link">
  <strong>Followers: <span>123k</span></strong>
  </p>
  </div>
</div>