<div class="media">
  <% if user_signed_in?%>
    <%= image_tag current_user.photo.url, class: "tweet-img"%>
    <div class="media-body"> 
      <%= render "form" %>
    </div>
  <%end%>
</div>

<ul class="list-unstyled">
  <% @tweets.each do |tweet| %>
    <div class="media mt-4">
        <%= image_tag tweet.user.photo.url, class: "tweet-img"%>
      <div class="media-body">
        <div class="card">
          <div class="card-body dark-bg">
            <div class="card-name-bar">
              <h3>
                <%= tweet.user.name%>
              </h3>
              <h4>
                <%= tweet.user.username%>
              </h4>
            </div>
            <div class="card-text tweet-body">
              <h4>
                <%= tweet.tweet %>
              </h4>
              <p>
                <%= tweet.created_at.strftime("%Y-%m-%d") %> 
                at 
                <%= tweet.created_at.strftime("%H : %M") %>
              </p>
            </div>
            <% if user_signed_in?%>
              <div class="controlers">
                <%= link_to tweet, class: "btn" do %>
                  <%= image_tag("look", size: "20") %>
                <%end%>
              <%= link_to edit_tweet_path(tweet), class: "btn " do %>
                <%= image_tag("edit", size: "20") %>
              <%end%>
              <%= link_to tweet, class: "btn", method: :delete, data: {confirm: "You really want  to DELETE this Tweet ?"} do %>
                <%= image_tag("delete", size: "20") %>
              <%end%>
              </div>
            <%end%>
            
          </div>
      </div>
      </div>
    </div>
  <%end%>
</ul>



