<div class="form-inline">
  <div class="form-group-mb-2">
    <%= simple_form_for(@tweet) do |f| %>
    <%= f.error_notification %>
    <div class="tweet-box">
       <%= f.input :tweet, label: "Tweet about it", input_html: {class: "form-control"}, wrapper: false, label_html: {class: "form-control-plaintext text"}, placeholder: "Compose a new Tweet..." %>
       <%= f.button :submit, class: "submit-btn" %>
    </div>
    <%end%>
  </div>
</div>





